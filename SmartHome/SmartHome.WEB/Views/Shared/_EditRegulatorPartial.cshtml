@using SmartHome.Services.DTO
@model RegulatorDTO

@using (Html.BeginForm("Edit", "Regulator"))
{
    <input id="Id" value="@Model.Id" name="Id" type="hidden" />
    @Html.HiddenFor(Model => Model.DeviceId)
    <p>@Html.DisplayFor(Model => Model.Name)</p>
    <p>@Html.DisplayFor(Model => Model.MeasureName)</p>
    <p>@Html.DisplayFor(Model => Model.MinValue)</p>
    <p>@Html.DisplayFor(Model => Model.MaxValue)</p>
    <p>@Html.EditorFor(Model => Model.Value)</p>

    <input type="submit" value="Изменить" />
}
